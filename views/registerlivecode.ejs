<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng kí live code</title>
    <script src="/public/jquery-3.2.1.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/assets/css/livecodepage.css">
    <script src="/public/assets/js/menu.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script>

        $(document).ready(function () {
            $('.dangki').on('click', function () {
                $('#tbDK').html('Đang tiến hành đăng kí');
                var malivecode = this.id;
                var tenlivecode = $('#ten' + malivecode).val();
                var mota = $("#mota" + malivecode).val();
                $.ajax({
                    url: '/livecode/register?malivecode=' + malivecode + '&tenlivecode=' + tenlivecode + '&mota=' + mota,
                    type: 'get',
                    success: function (data) {
                        if (data.data === 'ok') {
                            $('#ten' + malivecode).attr('readOnly',true);
                            $('#mota' + malivecode).attr('readOnly',true);
                            $('#'+malivecode).html('Vô hiệu');
                            $('#'+malivecode).attr('disabled','disabled');
                            $("#email"+malivecode).html(User.email);
                            $('#tbDK').html('Đăng kí thành công');
                        }
                    },
                    error: function (err) {
                        $('#tbDK').html('Lỗi đăng kí');
                    }
                });

            });
        });

    </script>

</head>
